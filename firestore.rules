rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS
    // Users can read anyone's profile
    // Users can only create and update their own profile
    match /users/{userId} {
      allow read;
      allow create, update: if isSignedIn() && isOwner(userId);
    }

    // LISTINGS
    match /listings/{listingId} {
      // Anyone can view listings
      allow read;
      // Users can create listings for themselves
      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.description.size() < 5000;
      
      // The owner of a listing can update or delete it.
      // Any signed-in user can update a listing as long as they don't change the owner ID.
      // This is a simplified rule for the demo to allow guests to add reviews.
      // A more robust implementation would use Cloud Functions or more complex rules.
      allow update: if isSignedIn()
                    && request.resource.data.userId == resource.data.userId
                    && request.resource.data.description.size() < 5000;

      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // BOOKINGS
    match /bookings/{bookingId} {
       function getListing() {
        return get(/databases/$(database)/documents/listings/$(request.resource.data.listingId)).data;
      }
      
      // Anyone can read booking data to show calendar availability.
      allow read;
      
      // A guest (signed-in or not) can create a booking.
      allow create: if request.resource.data.hostId == getListing().userId &&
        (
          // Logged-in user flow
          (
            isSignedIn() &&
            request.resource.data.guestId == request.auth.uid &&
            request.resource.data.guestId != request.resource.data.hostId
          ) ||
          // Guest user flow (not signed in)
          (
            !isSignedIn() &&
            request.resource.data.guestId == null &&
            request.resource.data.guestName is string &&
            request.resource.data.guestEmail is string &&
            request.resource.data.guestPhone is string
          )
        );
    }
  }
}
