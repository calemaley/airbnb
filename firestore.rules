rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS
    // Users can read anyone's profile
    // Users can only create and update their own profile
    match /users/{userId} {
      allow read;
      allow create, update: if isSignedIn() && isOwner(userId);
    }

    // LISTINGS
    match /listings/{listingId} {
      // Anyone can view listings
      allow read;
      // Users can create listings for themselves
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // The owner of a listing can update or delete it
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }
  }
}
